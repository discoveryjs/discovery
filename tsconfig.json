{
    "include": [
        "src/**/*.ts"
    ],
    "compilerOptions": {
        "lib": ["ES2022", "DOM", "DOM.iterable"],
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "target": "ES2022",
        "allowJs": true,
        "outDir": "./lib", // there are errors without the option (a value doesn't make sense) because of allowJs: true
        // "noImplicitAny": true,
        "strictNullChecks": true,
        "declaration": true
    }
}
